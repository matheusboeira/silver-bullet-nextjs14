{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"ignore": ["node_modules/**/*", "dist/**/*", "src/locales/**/*"]
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 2,
			"semicolons": "asNeeded",
			"trailingComma": "none",
			"arrowParentheses": "always",
			"quoteStyle": "single"
		}
	}
}
